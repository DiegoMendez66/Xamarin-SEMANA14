<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA14.Views.ProductInsert">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name"  Text="{Binding Name}" HorizontalOptions="FillAndExpand"/>
            <Entry Placeholder="Description"  Text="{Binding Description}" HorizontalOptions="FillAndExpand"/>
            <Entry Placeholder="Price"  Text="{Binding Price}" HorizontalOptions="FillAndExpand"/>
            <Entry Placeholder="Fecha de vencimiento"  Text="{Binding Fechav}" HorizontalOptions="FillAndExpand"/>
            
            <Button Text="INSERTAR" Command="{Binding InsertCommand}" />
            <Button x:Name="Item1" Text="Lista de productos"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>